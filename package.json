{
  "name": "playground-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:static": "npx serve",

    "build": "ng build",
    "build:dialog-demo": "ng build --project dialog-demo",
    "build:spacebar-listener": "ng build --project spacebar-listener",
    "build:interactive-board-three-js-demo": "ng build --project interactive-board-three-js-demo",
    "build:minesweeper-game-demo": "ng build --project minesweeper-game-demo",
    "build:touch-events-demo": "ng build --project touch-events-demo",
    "build:smoke-effect-three-js-demo": "ng build --project smoke-effect-three-js-demo",
    "build:waterfall-effect-three-js-demo": "ng build --project waterfall-effect-three-js-demo",
    "build:smoke-effect-vanilla-js-demo": "ng build --project smoke-effect-vanilla-js-demo",
    "build:internationalization-demo": "ng build --project internationalization-demo --localize",
    "build:rotating-cube-three-js-demo": "ng build --project rotating-cube-three-js-demo",

    "start:dialog-demo": "ng serve --project dialog-demo",
    "start:interactive-board-three-js-demo": "ng serve --project interactive-board-three-js-demo --port 4301",
    "start:internationalization-demo": "ng serve --project internationalization-demo",
    "start:minesweeper-game-demo": "ng serve --project minesweeper-game-demo --port 4302",
    "start:rotating-cube-three-js-demo": "ng serve --project rotating-cube-three-js-demo --port 4211",
    "start:smoke-effect-three-js-demo": "ng serve --project smoke-effect-three-js-demo --port 4210",
    "start:smoke-effect-vanilla-js-demo": "ng serve --project smoke-effect-vanilla-js-demo",
    "start:spacebar-listener": "ng serve --project spacebar-listener",
    "start:spine-player-demo": "ng serve --project spine-player-demo",
    "start:sprite-sheet-player-demo": "ng serve --project sprite-sheet-player-demo",
    "start:three-js-underwater-bubbles-demo": "ng serve --project three-js-underwater-bubbles-demo",
    "start:touch-events-demo": "ng serve --project touch-events-demo",
    "start:waterfall-effect-three-js-demo": "ng serve --project waterfall-effect-three-js-demo --port 4210",

    "extract:languages": "ng extract-i18n --output-path src/locale --project internationalization-demo",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.1.0",
    "@angular/common": "^19.1.0",
    "@angular/compiler": "^19.1.0",
    "@angular/core": "^19.1.0",
    "@angular/forms": "^19.1.0",
    "@angular/platform-browser": "^19.1.0",
    "@angular/platform-browser-dynamic": "^19.1.0",
    "@angular/router": "^19.1.0",
    "@esotericsoftware/spine-player": "^4.2.75",
    "@types/three": "^0.173.0",
    "lil-gui": "^0.20.0",
    "rxjs": "~7.8.0",
    "three": "^0.173.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.1.3",
    "@angular/cli": "^19.1.3",
    "@angular/compiler-cli": "^19.1.0",
    "@angular/localize": "^19.1.6",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^19.1.0",
    "typescript": "~5.7.2"
  }
}
